version: '3'
services:
  # DON'T FORGET TO CHANGE THE XX WITH YOUR PORT
  # YOUR_USER WITH YOUR UNIX USER
  postgres_db03:
    image: postgres:14-alpine
    container_name: "postgres03"
    environment:
      - "POSTGRES_PASSWORD=YourUltraSecretPassword123"
      - "POSTGRES_DB=aldair_alvarado_db"
      - "POSTGRES_USER=aldair_alvarado"
    ports:
      - "10003:5503"
    volumes:
      - "/home/aldair_alvarado/postgres:/usr/src/postgres"
    networks:
      - our-library-net
    command: -p 5503

  web03:
    build: .
    command: bash -c "python manage.py makemigrations && python manage.py migrate && python manage.py runserver 0.0.0.0:8003"
    container_name: "django03"
    depends_on: 
      - postgres_db03
    environment:
      - "PSQL_DBNAME=aldair_alvarado_db"
      - "PSQL_USERNAME=aldair_alvarado"
      - "PSQL_PASS=SecretPassword123"
      - "PSQL_HOST=192.168.48.2" # You must use the command of the README.md file in order to get this IP address
      - "PSQL_PORT=5503"
    volumes:
      - "/home/aldair_alvarado/Django-REST-Exercise:/usr/src/django/library"
    ports:
      - "9003:8003"
    networks:
      - our-library-net

networks:
  our-library-net:
    external: true
    driver: bridge